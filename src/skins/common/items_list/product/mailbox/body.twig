 # Product mail widget
 #}

<div class="products-mail-box">
  {% for product in this.getProducts() %}
    {% if this.getUrlProcessor() %}
      {{ widget('\\XLite\\View\\Product\\MailBox', product=product, productUrlProcessor=this.getUrlProcessor()) }}
    {% else %}
      {{ widget('\\XLite\\View\\Product\\MailBox', product=product) }}
    {% endif %}
  {% endfor %}
</div>